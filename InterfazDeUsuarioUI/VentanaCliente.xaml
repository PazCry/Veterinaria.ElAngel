<Window x:Class="InterfazDeUsuarioUI.VentanaCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaCliente" Height="450" Width="800" WindowStyle="None"
Background="Transparent"
AllowsTransparency="True"
ResizeMode="NoResize"
MouseDown="Window_MouseDown">

    <Border CornerRadius="8 8 0 0"
      BorderThickness="5 16 5 5"
      RenderTransformOrigin="0.503,0.525">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-29.932" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="White" Offset="0.662"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFBDF6" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="497*"/>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="84*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Margin="0,-15,0,29" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="624*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="41"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="36"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimize"
       Background="Transparent"
       BorderThickness="0"
       Content="-"
       Foreground= "Black"
       FontSize="30"
       FontFamily="Montserrat"
       Cursor="Hand"
       Grid.Column="4"
       Click="btnMinimize_Click"
       HorizontalAlignment="Left" Width="47" Margin="10,-12,0,-12" Grid.ColumnSpan="3"/>



                <Button x:Name="btnClose"
       Background= "Transparent"
       BorderThickness="0"
       Content="X"
       Foreground= "Black"
       FontSize="12"
       FontFamily="Montserrat"
       Cursor="Hand"
       Grid.Column="6"
       Click="btnClose_Click" Margin="33,0,4,0" Grid.ColumnSpan="3"/>

                <Button x:Name="btnMaximize"
         Background="Transparent"
         BorderThickness="0"
         Content="⬜"
         Foreground="Black"
         FontSize="12"
         FontFamily="Montserrat"
         Cursor="Hand"
         Grid.Column="4"
         Click="btnMaximize_Click"
         Margin="42,0,0,0" Grid.ColumnSpan="3"/>

            </Grid>
            <Label Content="Cliente" HorizontalAlignment="Left" Margin="10,-21,0,0" VerticalAlignment="Top"/>
            <Label Content="Num Cliente" HorizontalAlignment="Left" Margin="29,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="23" Width="98"/>
            <Label Content="Nombre" HorizontalAlignment="Left" Margin="29,75,0,0" Grid.Row="1" VerticalAlignment="Top" Height="23" Width="73"/>
            <Label Content="Apellido" HorizontalAlignment="Left" Margin="29,133,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="98"/>
            <Label Content="Telefono" HorizontalAlignment="Left" Margin="29,200,0,0" Grid.Row="1" VerticalAlignment="Top" Height="22" Width="73"/>
            <Label Content="Buscar por Nombre" HorizontalAlignment="Left" Margin="248,7,0,0" Grid.Row="1" VerticalAlignment="Top" Height="29" Width="126"/>
            <TextBox HorizontalAlignment="Left" Margin="29,38,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" Height="23"/>
            <TextBox HorizontalAlignment="Left" Margin="29,98,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" Height="23"/>
            <TextBox HorizontalAlignment="Left" Margin="29,161,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" Height="23"/>
            <TextBox HorizontalAlignment="Left" Margin="29,227,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" Height="23"/>
            <TextBox HorizontalAlignment="Left" Margin="248,38,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" Height="23"/>
            <DataGrid Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="47,272,42,0" Grid.ColumnSpan="3"/>
            <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="448,30,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="102" Grid.ColumnSpan="2" Background="#FFDE6AF0" Foreground="#FFF9F5F5" FontWeight="Bold" FontFamily="Times New Roman" BorderBrush="Black"/>
            <Button x:Name="btnReiniciar" Content="Reiniciar" HorizontalAlignment="Left" Margin="105,30,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="102" Grid.Column="1" FontFamily="Times New Roman" Foreground="#FFF3EEEE" Background="#FFDE6AF0" BorderBrush="Black" FontWeight="Bold"/>
            <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="385,198,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="102" Background="#FFDE6AF0" BorderBrush="#FF040303" FontFamily="Times New Roman" FontWeight="Bold" Foreground="#FFF5F1F1"/>
            <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="10,198,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="102" Grid.Column="1" FontFamily="Times New Roman" FontWeight="Bold" Foreground="#FFF5F1F1" BorderBrush="#FF0E0D0D" Background="#FFDE6AF0"/>
            <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="137,200,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="102" Grid.ColumnSpan="2" Grid.Column="1" Background="#FFDE6AF0" BorderBrush="#FF040404" FontFamily="Times New Roman" FontWeight="Bold" Foreground="#FFF3F3F3"/>
        </Grid>
    </Border>
</Window>
