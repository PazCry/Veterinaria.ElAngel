<Window x:Class="InterfazDeUsuarioUI.VentanaCitaCalendario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaCitaCalendario" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="CalendarStyle1" TargetType="{x:Type Calendar}">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE4EAF0" Offset="0"/>
                        <GradientStop Color="#FFECF0F4" Offset="0.16"/>
                        <GradientStop Color="#FFFCFCFD" Offset="0.16"/>
                        <GradientStop Color="#FFFFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA3AEB9" Offset="0"/>
                        <GradientStop Color="#FF8399A9" Offset="0.375"/>
                        <GradientStop Color="#FF718597" Offset="0.375"/>
                        <GradientStop Color="#FF617584" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Calendar}">
                        <StackPanel x:Name="PART_Root" Width="771">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" Height="404" Background="#FFF9B8D9" BorderBrush="Black" Foreground="White"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="759">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="754">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="763">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="780">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="784">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="763">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="759">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="725">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="721">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="688">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="675">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="642">
                            <CalendarItem
                    Style="{TemplateBinding CalendarItemStyle}" x:Name="PART_CalendarItem" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"/>
                        </StackPanel>
                        <StackPanel x:Name="PART_Root" Width="538">
                            <CalendarItem x:Name="PART_CalendarItem" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Style="{TemplateBinding CalendarItemStyle}"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Calendar Style="{DynamicResource CalendarStyle1}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="414" Width="780"/>

    </Grid>
</Window>
