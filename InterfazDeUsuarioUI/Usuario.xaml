<Window x:Class="InterfazDeUsuarioUI.Usuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="Usuario" Height="450" Width="800" WindowStyle="None"
Background="Transparent"
AllowsTransparency="True"
ResizeMode="NoResize"
MouseDown="Window_MouseDown">

    <Border CornerRadius="8 8 0 0"
      BorderThickness="5 16 5 5"
      RenderTransformOrigin="0.503,0.525">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-29.932" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="White" Offset="0.662"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFBDF6" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="497*"/>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="84*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Margin="0,-15,0,29" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="624*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="41"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="36"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimize1"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="-"
                    Foreground= "Black"
                    FontSize="30"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="4"
                    Click="btnMinimize_Click"
                    HorizontalAlignment="Left" Width="47" Margin="10,-12,0,-12" Grid.ColumnSpan="3"/>



                <Button x:Name="btnClose1"
                    Background= "Transparent"
                    BorderThickness="0"
                    Content="X"
                    Foreground= "Black"
                    FontSize="12"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="6"
                    Click="btnClose_Click" Margin="33,0,4,0" Grid.ColumnSpan="3"/>

                <Button x:Name="btnMaximize1"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="⬜"
                    Foreground="Black"
                    FontSize="12"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="4"
                    Click="btnMaximize_Click"
                    Margin="42,0,0,0" Grid.ColumnSpan="3"/>

            </Grid>
            <Label Content="Usuario" HorizontalAlignment="Left" Margin="0,-21,0,0" VerticalAlignment="Top"/>
            <Label Content="Nombre" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="64"/>
            <Label Content="Apellido" HorizontalAlignment="Left" Margin="10,62,0,0" Grid.Row="1" VerticalAlignment="Top" Width="64"/>
            <Button x:Name="btnGuardar"
          Content="💾 Guardar" 
          Foreground="White" Margin="248,118,132,251" Grid.Row="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00CEC9" Offset="0"/>
                        <GradientStop Color="#00B894" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnBuscar"
         Content="🔍 Buscar" 
         Foreground="White" Grid.ColumnSpan="2" Margin="395,33,194,336" Grid.Row="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#74B9FF" Offset="0"/>
                        <GradientStop Color="#0984E3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnModificar"
        Content="✏ Modificar" 
        Foreground="White" Grid.ColumnSpan="2" Margin="0,118,194,251" Grid.Row="1" HorizontalAlignment="Right" Width="116">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FDCB6E" Offset="0"/>
                        <GradientStop Color="#E17055" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="btnEliminar"
         Content="🗑 Eliminar"
         Foreground="White" Margin="47,118,46,250" Grid.Row="1" Grid.Column="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FD79A8" Offset="0"/>
                        <GradientStop Color="#E84393" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Label Content="Correo" HorizontalAlignment="Left" Margin="10,112,0,0" Grid.Row="1" VerticalAlignment="Top" Width="64"/>
            <Label Content="Contraseña" HorizontalAlignment="Left" Margin="10,167,0,0" Grid.Row="1" VerticalAlignment="Top" Width="64"/>
            <Label Content="Telefono" HorizontalAlignment="Left" Margin="10,216,0,0" Grid.Row="1" VerticalAlignment="Top" Width="64"/>
            <Label Content="Nombre del Rol" HorizontalAlignment="Left" Margin="10,263,0,0" Grid.Row="1" VerticalAlignment="Top" Width="101"/>
            <Label Content="ID" HorizontalAlignment="Left" Margin="10,314,0,0" Grid.Row="1" VerticalAlignment="Top" Width="64"/>
            <Label Content="Buscar" HorizontalAlignment="Left" Margin="248,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="64"/>
            <TextBox HorizontalAlignment="Left" Margin="10,39,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" Margin="10,88,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" Margin="10,144,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" Margin="10,198,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" Margin="10,240,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" Margin="10,340,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="79" Height="19"/>
            <TextBox HorizontalAlignment="Left" Margin="248,39,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <ComboBox HorizontalAlignment="Left" Margin="10,289,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
            <DataGrid Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="180,198,42,14" Grid.ColumnSpan="3"/>


        </Grid>
    </Border>

</Window>
