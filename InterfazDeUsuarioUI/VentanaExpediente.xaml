        <ComboBox x:Name="cbxNumMascota" HorizontalAlignment="Left" Margin="19,94,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblEstado" Content="Estado" HorizontalAlignment="Left" Margin="19,122,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbxEstado" HorizontalAlignment="Left" Margin="19,149,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblId" Content="ID" HorizontalAlignment="Left" Margin="19,176,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="19,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Height="25"/>
        <Label x:Name="lblNumCliente_Copiar" Content="Descripción Consulta" HorizontalAlignment="Left" Margin="201,5,0,0" VerticalAlignment="Top" Width="415"/>
