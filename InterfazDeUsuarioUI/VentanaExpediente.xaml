        <Label x:Name="lblNumCliente_Copiar1" Content="Fecha de Atención" HorizontalAlignment="Left" Margin="208,63,0,0" VerticalAlignment="Top" Width="143"/>
        <DatePicker x:Name="dpFechaAtencion" HorizontalAlignment="Left" Margin="208,89,0,0" VerticalAlignment="Top" Width="494"/>
        <Label x:Name="lblNumCliente_Copiar2" Content="Buscar ID" HorizontalAlignment="Left" Margin="208,116,0,0" VerticalAlignment="Top" Width="143"/>
        <TextBox x:Name="txtId_Copiar" HorizontalAlignment="Left" Margin="208,146,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="327" Height="25"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="201,205,0,0" VerticalAlignment="Top" Height="32" Width="113"/>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="479,205,0,0" VerticalAlignment="Top" Height="32" Width="112"/>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="611,204,0,0" VerticalAlignment="Top" Height="34" Width="113"/>
        <Button x:Name="btnReiniciar" Content="Reiniciar" HorizontalAlignment="Center" Margin="0,205,0,0" VerticalAlignment="Top" Height="34" Width="114"/>
        <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="548,144,0,0" VerticalAlignment="Top" Height="27" Width="154" RenderTransformOrigin="1.115,0.551"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,263,10,4"/>

    </Grid>
</Window>
