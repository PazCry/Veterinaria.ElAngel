<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="InterfazDeUsuarioUI.VentanaExpediente"
        mc:Ignorable="d"
        Title="VentanaExpediente" Height="450" Width="800"                WindowStyle="None"
Background="Transparent"
AllowsTransparency="True"
ResizeMode="NoResize"
MouseDown="Window_MouseDown">

    <Border CornerRadius="8 8 0 0"
     BorderThickness="5 16 5 5"
     RenderTransformOrigin="0.503,0.525">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-29.932" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="White" Offset="0.662"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFBDF6" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="353*"/>
                <ColumnDefinition Width="42*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Margin="0,-15,0,29" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="624*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="0*"/>

                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="41"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="36"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimize"
      Background="Transparent"
      BorderThickness="0"
      Content="-"
      Foreground= "Black"
      FontSize="30"
      FontFamily="Montserrat"
      Cursor="Hand"
      Grid.Column="4"
      Click="btnMinimize_Click"
      HorizontalAlignment="Left" Width="47" Margin="10,-12,0,-12" Grid.ColumnSpan="3"/>



                <Button x:Name="btnClose"
      Background= "Transparent"
      BorderThickness="0"
      Content="X"
      Foreground= "Black"
      FontSize="12"
      FontFamily="Montserrat"
      Cursor="Hand"
      Grid.Column="6"
      Click="btnClose_Click" Margin="33,0,4,0" Grid.ColumnSpan="3"/>

                <Button x:Name="btnMaximize"
        Background="Transparent"
        BorderThickness="0"
        Content="⬜"
        Foreground="Black"
        FontSize="12"
        FontFamily="Montserrat"
        Cursor="Hand"
        Grid.Column="4"
        Click="btnMaximize_Click"
        Margin="42,0,0,0" Grid.ColumnSpan="3"/>

            </Grid>
            <Label x:Name="lblNumCliente" Content="Num Cliente" HorizontalAlignment="Left" Height="23" Margin="18,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="78"/>
            <ComboBox x:Name="cbxNumCliente" HorizontalAlignment="Left" Margin="20,38,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lblNumMascota" Content="Num Mascota" HorizontalAlignment="Left" Height="23" Margin="15,66,0,0" Grid.Row="1" VerticalAlignment="Top" Width="90"/>
            <ComboBox x:Name="cbxNumMascota" HorizontalAlignment="Left" Margin="19,93,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lblEstado" Content="Estado" HorizontalAlignment="Left" Height="23" Margin="17,121,0,0" Grid.Row="1" VerticalAlignment="Top" Width="90"/>
            <ComboBox x:Name="cbxEstado" HorizontalAlignment="Left" Margin="19,149,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lblId" Content="ID" HorizontalAlignment="Left" Height="23" Margin="23,182,0,0" Grid.Row="1" VerticalAlignment="Top" Width="116"/>
            <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="19,213,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="30"/>
            <Label x:Name="lblDescripcionConsulta" Content="Descripción Consulta" HorizontalAlignment="Left" Height="31" Margin="230,1,0,0" Grid.Row="1" VerticalAlignment="Top" Width="266"/>
            <TextBox x:Name="txtDescripcionConsulta" HorizontalAlignment="Left" Margin="234,37,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="462" Height="27"/>
            <Label x:Name="lblFechaAtencion" Content="Fecha de Atención" HorizontalAlignment="Left" Height="31" Margin="233,67,0,0" Grid.Row="1" VerticalAlignment="Top" Width="266"/>
            <DatePicker x:Name="dpFechaAtencion" HorizontalAlignment="Left" Margin="233,99,0,0" Grid.Row="1" VerticalAlignment="Top" Width="463" Height="33" RenderTransformOrigin="0.5,0.5">
                <DatePicker.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.374"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </DatePicker.RenderTransform>
            </DatePicker>
            <Label x:Name="lblBuscarId" Content="Buscar ID" HorizontalAlignment="Left" Height="23" Margin="233,131,0,0" Grid.Row="1" VerticalAlignment="Top" Width="90"/>
            <TextBox x:Name="txtBuscarId" HorizontalAlignment="Left" Margin="234,156,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="313" Height="28"/>
            <Button x:Name="btnReiniciar" Content="Reiniciar" HorizontalAlignment="Left" Margin="344,214,0,0" Grid.Row="1" VerticalAlignment="Top" Height="29" Width="91"/>
            <DataGrid Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,260,0,0" Grid.ColumnSpan="2"/>

            <Button x:Name="btnBuscar"
         Content="🔍 Buscar" 
         Foreground="White" Margin="583,155,30,0" Height="30" VerticalAlignment="Top" Grid.Row="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#74B9FF" Offset="0"/>
                        <GradientStop Color="#0984E3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnModificar"
        Content="✏ Modificar" 
        Foreground="White" Margin="564,213,62,156" Grid.Row="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FDCB6E" Offset="0"/>
                        <GradientStop Color="#E17055" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnGuardar"
          Content="💾 Guardar" 
          Foreground="White" Margin="465,213,165,156" Grid.Row="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00CEC9" Offset="0"/>
                        <GradientStop Color="#00B894" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="btnEliminar"
         Content="🗑 Eliminar"
         Foreground="White" Margin="664,214,42,155" Grid.Row="1" Grid.ColumnSpan="2">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FD79A8" Offset="0"/>
                        <GradientStop Color="#E84393" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Border>

</Window>
