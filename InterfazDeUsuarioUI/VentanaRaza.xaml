<Window x:Class="InterfazDeUsuarioUI.VentanaRaza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaRaza" Height="450" Width="800"                WindowStyle="None"
Background="Transparent"
AllowsTransparency="True"
ResizeMode="NoResize"
MouseDown="Window_MouseDown">

    <Border CornerRadius="8 8 0 0"
     BorderThickness="5 16 5 5"
     RenderTransformOrigin="0.503,0.525" Margin="1,0,0,1">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform AngleY="-0.16"/>
                <RotateTransform/>
                <TranslateTransform Y="0.66"/>
            </TransformGroup>
        </Border.RenderTransform>
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-29.932" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="White" Offset="0.662"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFBDF6" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid Margin="-1,0,1,-1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="404*"/>
                <ColumnDefinition Width="301*"/>
                <ColumnDefinition Width="84*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="136*"/>
                <RowDefinition Height="263*"/>
            </Grid.RowDefinitions>
            <Grid Margin="0,-15,0,29" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>


                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimize"
      Background="Transparent"
      BorderThickness="0"
      Content="-"
      Foreground= "Black"
      FontSize="30"
      FontFamily="Montserrat"
      Cursor="Hand"
      Grid.Column="4"
      Click="btnMinimize_Click"
      HorizontalAlignment="Left" Width="47" Margin="10,-12,0,-12" Grid.ColumnSpan="3"/>



                <Button x:Name="btnClose"
      Background= "Transparent"
      BorderThickness="0"
      Content="X"
      Foreground= "Black"
      FontSize="12"
      FontFamily="Montserrat"
      Cursor="Hand"
      Grid.Column="6"
      Click="btnClose_Click" Margin="33,0,4,0" Grid.ColumnSpan="3"/>

                <Button x:Name="btnMaximize"
        Background="Transparent"
        BorderThickness="0"
        Content="⬜"
        Foreground="Black"
        FontSize="12"
        FontFamily="Montserrat"
        Cursor="Hand"
        Grid.Column="4"
        Click="btnMaximize_Click"
        Margin="42,0,0,0" Grid.ColumnSpan="3"/>

            </Grid>
            <DataGrid Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="3" Margin="0,48,-1,-2" RenderTransformOrigin="0.5,0.5" SelectionChanged="DataGrid_SelectionChanged">
                <DataGrid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.404"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </DataGrid.RenderTransform>
            </DataGrid>
            <Label Content="Raza" HorizontalAlignment="Left" Margin="0,-20,0,0" VerticalAlignment="Top" Height="26" Width="35"/>
            <Label Content="Tipo de raza" HorizontalAlignment="Left" Margin="177,0,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="14" Height="29" Width="86"/>
            <TextBox HorizontalAlignment="Left" Margin="49,44,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Background="{x:Null}" BorderBrush="Black" Height="18"/>
            <Button Content="Guardar" HorizontalAlignment="Left" Margin="90,101,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="104" Foreground="#FFEEEAEA">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.899"/>
                        <GradientStop Color="#FECC76E8" Offset="0.403"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Modificar" HorizontalAlignment="Left" Margin="346,101,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="103" Foreground="#FFEEEAEA" Grid.ColumnSpan="2" RenderTransformOrigin="-0.547,0.45">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.899"/>
                        <GradientStop Color="#FECC76E8" Offset="0.403"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Eliminar" HorizontalAlignment="Left" Margin="169,103,0,0" Grid.Row="1" VerticalAlignment="Top" Height="31" Width="102" Foreground="#FFEEEAEA" Grid.Column="1">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.899"/>
                        <GradientStop Color="#FECC76E8" Offset="0.403"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="49,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Background="{x:Null}" BorderBrush="{x:Null}" Height="18"/>
        </Grid>
    </Border>

</Window>
