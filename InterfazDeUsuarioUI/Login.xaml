<Window x:Class="InterfazDeUsuarioUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">


    <Border CornerRadius="50"
            BorderThickness="2" RenderTransformOrigin="0.503,0.525">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-29.932" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFF81E3" Offset="0.662"/>
                <GradientStop Color="#FFF7CBD2" Offset="0.31"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="1,1">
                <GradientStop Color="Black" Offset="0"/>

            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="624*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="41"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="36"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                               Foreground= "Black"
                               FontSize="11"
                               FontFamily="Montserrat" Grid.Column="0"
                               VerticalAlignment="Bottom"
                               Margin="21,0,1,-1" Height="13">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.530"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Button x:Name="btnMinimize"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="-"
                        Foreground= "Black"
                        FontSize="30"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="3"
                        Click="btnMinimize_Click"
                        HorizontalAlignment="Center" Width="47" Margin="0,-4,0,-4"/>



                <Button x:Name="btnClose"
                        Background= "Transparent"
                        BorderThickness="0"
                        Content="X"
                        Foreground= "Black"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="6"
                        Click="btnClose_Click" Margin="0,0,1,0"/>

                <Button x:Name="btnMaximize"
                          Background="Transparent"
                          BorderThickness="0"
                          Content="⬜"
                          Foreground="Black"
                          FontSize="12"
                          FontFamily="Montserrat"
                          Cursor="Hand"
                          Grid.Column="4"
                          Click="btnMaximize_Click"
                          Margin="0,0,1,0"/>

            </Grid>
            <StackPanel Width="250"
                        Orientation="Vertical"
                        Margin="273,0,273,95" Grid.Row="1">
                <TextBlock
                           Foreground= "Black"
                           FontSize="25"
                           FontWeight="Medium"
                           FontFamily="Cooper Black"
                           Height="176" Width="250" TextAlignment="Center" LineHeight="6" HorizontalAlignment="Center"><Run Text="VETERINARIA  Y "/><LineBreak/><Run Text="FARMACIA"/><LineBreak/><Run Text="EL ANGEL"/><LineBreak/><Run/></TextBlock>
                <TextBlock Text="Username"
                   Foreground= "Black"
                   FontSize="12"
                   FontWeight="Medium"
                   FontFamily="!Montserrat"
                   />

                <TextBox x:Name="txtUser"
                 FontSize="13"
                 FontWeight="Medium"
                 FontFamily="Montserrat"
                 Background="Transparent"
                 Foreground= "Black"
                 CaretBrush= "LightGray"
                 BorderBrush= "Black"
                 BorderThickness="0, 0, 0, 1"
                 Height="28"
                 VerticalContentAlignment="Center"
                 Margin="0, 5,0,0"/>

                <TextBlock Text="Password"
                           Foreground= "Black"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0, 35, 0, 0"/>

                <PasswordBox x:Name="txtPass"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground= "Black"
                             CaretBrush= "Black"
                             BorderBrush= "Black"
                             BorderThickness="0, 0, 0, 1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20, 0, 0, 0" Background="{x:Null}"/>
            </StackPanel>
        </Grid>

    </Border>

</Window>
