<Window x:Class="InterfazDeUsuarioUI.VentanaRol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaRol" Height="450" Width="800" WindowStyle="None"
Background="Transparent"
AllowsTransparency="True"
ResizeMode="NoResize"
MouseDown="Window_MouseDown">

    <Border CornerRadius="8 8 0 0"
      BorderThickness="5 16 5 5"
      RenderTransformOrigin="0.503,0.525">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-29.932" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="White" Offset="0.662"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFBDF6" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="497*"/>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="84*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Margin="0,-15,0,29" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="624*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="41"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="36"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimize"
       Background="Transparent"
       BorderThickness="0"
       Content="-"
       Foreground= "Black"
       FontSize="30"
       FontFamily="Montserrat"
       Cursor="Hand"
       Grid.Column="4"
       Click="btnMinimize_Click"
       HorizontalAlignment="Left" Width="47" Margin="10,-12,0,-12" Grid.ColumnSpan="3"/>



                <Button x:Name="btnClose"
       Background= "Transparent"
       BorderThickness="0"
       Content="X"
       Foreground= "Black"
       FontSize="12"
       FontFamily="Montserrat"
       Cursor="Hand"
       Grid.Column="6"
       Click="btnClose_Click" Margin="33,0,4,0" Grid.ColumnSpan="3"/>

                <Button x:Name="btnMaximize"
         Background="Transparent"
         BorderThickness="0"
         Content="⬜"
         Foreground="Black"
         FontSize="12"
         FontFamily="Montserrat"
         Cursor="Hand"
         Grid.Column="4"
         Click="btnMaximize_Click"
         Margin="42,0,0,0" Grid.ColumnSpan="3"/>

            </Grid>
            <Label Content="ROL" HorizontalAlignment="Left" Margin="10,-20,0,0" VerticalAlignment="Top"/>
            <Label Content="Nombre de Rol" HorizontalAlignment="Left" Margin="50,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="96"/>
            <TextBox HorizontalAlignment="Left" Margin="50,41,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Height="25"/>
            <Label Content="Numero del Rol" HorizontalAlignment="Left" Margin="50,86,0,0" Grid.Row="1" VerticalAlignment="Top" Width="117"/>
            <TextBox HorizontalAlignment="Left" Margin="50,117,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148" Height="25"/>
            <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="449,23,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="30" Width="103"/>
            <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="449,86,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="30" Width="103"/>
            <Button x:Name="btnEliminar" Content="Eliminar"  HorizontalAlignment="Left" Margin="449,154,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="30" Width="103"/>
            <DataGrid x:Name="listarRol" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="78,232,76,43" Grid.ColumnSpan="2"/>
        </Grid>
    </Border>

</Window>
