<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="InterfazDeUsuarioUI.VentanaCita"
        mc:Ignorable="d"
        Title="VentanaCita" Height="450" Width="800"                WindowStyle="None"
Background="Transparent"
AllowsTransparency="True"
ResizeMode="NoResize"
MouseDown="Window_MouseDown">

    <Border CornerRadius="8 8 0 0"
     BorderThickness="5 16 5 5"
     RenderTransformOrigin="0.503,0.525">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-29.932" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="White" Offset="0.662"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFBDF6" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid Margin="0,2,0,-2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="353*"/>
                <ColumnDefinition Width="42*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Margin="0,-15,0,29" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="624*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="41"/>
                    <ColumnDefinition Width="0"/>
      
                </Grid.ColumnDefinitions>

                <Button x:Name="btnMinimize"
      Background="Transparent"
      BorderThickness="0"
      Content="-"
      Foreground= "Black"
      FontSize="30"
      FontFamily="Montserrat"
      Cursor="Hand"
      Grid.Column="4"
      Click="btnMinimize_Click"
      HorizontalAlignment="Left" Width="47" Margin="10,-12,0,-12" Grid.ColumnSpan="3"/>



                <Button x:Name="btnClose"
      Background= "Transparent"
      BorderThickness="0"
      Content="X"
      Foreground= "Black"
      FontSize="12"
      FontFamily="Montserrat"
      Cursor="Hand"
      Grid.Column="6"
      Click="btnClose_Click" Margin="33,0,4,0" Grid.ColumnSpan="3"/>

                <Button x:Name="btnMaximize"
        Background="Transparent"
        BorderThickness="0"
        Content="⬜"
        Foreground="Black"
        FontSize="12"
        FontFamily="Montserrat"
        Cursor="Hand"
        Grid.Column="4"
        Click="btnMaximize_Click"
        Margin="42,0,0,0" Grid.ColumnSpan="3"/>

            </Grid>
            <Label x:Name="lblNumCita" Content="Num Cita" HorizontalAlignment="Left" Margin="24,13,0,0" VerticalAlignment="Top" Width="90" Height="26" Grid.RowSpan="2"/>
            <TextBox x:Name="txtNumCita" HorizontalAlignment="Left" Margin="24,15,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="30"/>
            <Label x:Name="lblNumExpediente" Content="Num Expediente" HorizontalAlignment="Left" Margin="24,52,0,0" VerticalAlignment="Top" Width="120" Height="26" Grid.Row="1"/>
            <TextBox x:Name="txtNumExpediente" HorizontalAlignment="Left" Margin="23,86,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="30"/>
            <Label x:Name="lblHora" Content="Hora" HorizontalAlignment="Left" Margin="23,124,0,0" VerticalAlignment="Top" Width="120" Height="26" Grid.Row="1"/>
            <TextBox x:Name="txtHora" HorizontalAlignment="Left" Margin="24,161,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Hora.." VerticalAlignment="Top" Width="120" Height="30"/>
            <Label x:Name="lblFechaCita" Content="Fecha de la Cita" HorizontalAlignment="Left" Margin="188,21,0,0" VerticalAlignment="Top" Width="104" Height="26" Grid.RowSpan="2"/>
            <DatePicker x:Name="dpFechaCita" HorizontalAlignment="Left" Margin="188,25,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="165"/>
            <Label x:Name="lblFechaCita_Copy" Content="Buscar Cita(Por Nombre)" HorizontalAlignment="Left" Margin="403,20,0,0" VerticalAlignment="Top" Width="155" Height="26" Grid.RowSpan="2"/>
            <TextBox x:Name="txtBuscarCita" HorizontalAlignment="Left" Margin="377,26,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="213" Height="30"/>
            <Label x:Name="lblFechaCita_Copy1" Content="Acceso rápido a las interfeces" HorizontalAlignment="Left" Margin="610,11,0,0" VerticalAlignment="Top" Width="170" Height="26" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="182,162,0,0" Grid.Row="1" VerticalAlignment="Top" Height="27" Width="125"/>
            <Button x:Name="btnReiniciar" Content="Reiniciar" HorizontalAlignment="Left" Margin="486,72,0,0" Grid.Row="1" VerticalAlignment="Top" Height="29" Width="108"/>
            <Button x:Name="btnExpediente" Content="Expediente" HorizontalAlignment="Left" Margin="648,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="112" Grid.ColumnSpan="2"/>
            <Button x:Name="btnMascota" Content="Mascota" HorizontalAlignment="Left" Margin="648,47,0,0" Grid.Row="1" VerticalAlignment="Top" Height="27" Width="112" Grid.ColumnSpan="2"/>
            <Button x:Name="btnCliente" Content="Cliente" HorizontalAlignment="Left" Margin="648,83,0,0" Grid.Row="1" VerticalAlignment="Top" Height="27" Width="112" Grid.ColumnSpan="2"/>
            <Button x:Name="btnCalendario" Content="Ver Calendario" HorizontalAlignment="Left" Margin="648,162,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="112" Grid.ColumnSpan="2"/>
            <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="510,163,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="100"/>
            <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="362,163,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="115"/>
            <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="371,72,0,0" Grid.Row="1" VerticalAlignment="Top" Height="29" Width="100"/>
            <DataGrid Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="16,209,10,13" Grid.ColumnSpan="2"/>
        </Grid>
    </Border>
</Window>
